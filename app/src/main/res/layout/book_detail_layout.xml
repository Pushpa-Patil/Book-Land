<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="290dp"
        android:backgroundTint="#FCFEFFFF"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="10dp"
        android:layout_marginLeft="6dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        android:alpha="0.9">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageView">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtbookname"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="160dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#CF205A">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/txtauther"
            android:textColor="#CF205A"
            android:textStyle="bold"
            android:textSize="15sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/rate"
            android:layout_marginRight="20dp"
            android:textColor="#E91E63"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:drawableLeft="@drawable/rate"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="160sp">
        </TextView>
        <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/dnpdf"
    android:background="@drawable/pdfdn"
    android:layout_marginLeft="220sp"
    android:textStyle="bold"
    android:layout_marginTop="160dp"
    android:textColor="#C72B60">
</ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/favorite"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="160dp"
            android:id="@+id/addfavorite">
        </ImageView>
        <RatingBar
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:id="@+id/Ratting"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp">
        </RatingBar>
    </androidx.cardview.widget.CardView>
</RelativeLayout>