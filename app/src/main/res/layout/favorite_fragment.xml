<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:backgroundTint="#FCFEFFFF"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="10dp"
        android:layout_marginLeft="6dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        android:alpha="0.9">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/dnpdf"
            android:background="@drawable/pdfdn"
            android:layout_marginLeft="220dp"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:textColor="#C72B60"></TextView>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageview">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBooks"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#CF205A">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/txtauther"
            android:textColor="#CF205A"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/favorite"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="140dp"
            android:id="@+id/removefavorite">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/rate"
            android:layout_marginRight="20dp"
            android:textColor="#E91E63"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:drawableLeft="@drawable/rate"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="160dp">
        </TextView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>