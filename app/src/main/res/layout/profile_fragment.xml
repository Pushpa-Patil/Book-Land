<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/image5">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/circleimage"
        android:id="@+id/circleimage"
        android:alpha="0.7">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="100dp"
        android:text="BookLand"
        android:textColor="#CA074A"
        android:textSize="27dp"
        android:textStyle="italic">
    </TextView>
    <TextView
        android:id="@+id/Uname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:textColor="#E91E63"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="Name"
        android:drawableLeft="@drawable/user"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_corners"/>
    <TextView
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="20dp"
        android:hint= " Email"
        android:drawableLeft="@drawable/email"
        android:textColorHint="#E91E63"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#CA074A"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_corners"
        android:padding="8dp" />
    <TextView
        android:id="@+id/Mobile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="20dp"
        android:hint= "MobileNo."

        android:drawableLeft="@drawable/mobileno"
        android:textColorHint="#E91E63"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#CA074A"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_corners"
        android:padding="8dp" />

</RelativeLayout>